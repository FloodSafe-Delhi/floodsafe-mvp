# FloodSafe Frontend Environment Variables
# Copy this file to .env and fill in your values

# Backend API URL (without /api suffix)
VITE_API_URL=http://localhost:8000

# Google OAuth 2.0 (https://console.cloud.google.com)
# Get this from Google Cloud Console > APIs & Services > Credentials
# Leave empty to disable Google auth
VITE_GOOGLE_CLIENT_ID=

# Firebase Configuration (https://console.firebase.google.com)
# Get these from Firebase Console > Project Settings > Your apps > Web app
# Required for phone authentication
# Leave empty to disable phone auth
VITE_FIREBASE_API_KEY=
VITE_FIREBASE_AUTH_DOMAIN=
VITE_FIREBASE_PROJECT_ID=
VITE_FIREBASE_STORAGE_BUCKET=
VITE_FIREBASE_MESSAGING_SENDER_ID=
VITE_FIREBASE_APP_ID=

# ========================================
# E2E Testing Configuration
# ========================================

# Supabase URL (for database assertions in E2E tests)
SUPABASE_URL=https://udblirsscaghsepuxxqv.supabase.co

# Supabase Service Role Key (for E2E tests only!)
# Get from: Supabase Dashboard > Settings > API > service_role (secret)
# WARNING: This key bypasses Row Level Security (RLS)
# NEVER expose this key in client-side code or commit actual values!
SUPABASE_SERVICE_ROLE_KEY=

# Set to "true" to cleanup test data after E2E run
CLEANUP_TEST_DATA=false
